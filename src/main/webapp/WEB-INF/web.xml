	<!-- REST enabling -->
	<servlet>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <url-pattern>/restservice/*</url-pattern>
    </servlet-mapping>
	<resource-env-ref>
        <description>
            This executor is used for the applicationâ€™s RESTful operations.
